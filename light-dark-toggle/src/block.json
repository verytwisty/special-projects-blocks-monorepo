    "apiVersion": 3,
    "name": "wpcomsp/light-dark-toggle",
    "version": "0.1.0",
    "title": "Light Dark Toggle",
    "category": "widgets",
    "icon": "smiley",
    "description": "Allows a site to have a light and dark mode toggle.",
    "example": {},
